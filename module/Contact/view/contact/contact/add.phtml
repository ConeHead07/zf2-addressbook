<?php
$title = 'Add new contact';
$this->headTitle($title);
?>
<h1><?php echo $this->escapeHtml($title); ?></h1>

<?php
$form = $this->form;
$form->setAttribute('action', $this->url('contact', array('action' => 'add')));
$form->prepare();

echo $this->form()->openTag($form) . PHP_EOL;
echo $this->formHidden($form->get('id')) . PHP_EOL;
echo $this->formRow($form->get('forename')) . PHP_EOL;
echo $this->formRow($form->get('surname')) . PHP_EOL;
echo $this->formRow($form->get('nickname')) . PHP_EOL;
echo $this->formRow($form->get('category')) . PHP_EOL;
echo $this->formInput($form->get('submit')) . PHP_EOL;
echo $this->form()->closeTag($form) . PHP_EOL;

